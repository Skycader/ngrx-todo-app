{
  "name": "ngrx-todo-app",
  "version": "0.0.0",
  "scripts": {
    "s": "yarn ntl -s 20 -A --exclude cy:open cy:run upload build s",
    "build": "ng build --base-href https://skycader.github.io/ngrx-todo-app/",
    "upload": "npx angular-cli-ghpages --dir=dist/ngrx-todo-app/browser",
    "deploy": "yarn build && yarn upload",
    "start": "ng serve",
    "test": "ng test",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "e2e": "concurrently \"npm run start\" \"wait-on http-get://localhost:4200 && npm run cy:run\" --kill-others --success first",
    "e2e-gui": "concurrently \"npm run start\" \"wait-on http-get://localhost:4200 && npm run cy:open\" --kill-others --success first"
  },
  "ntl": {
    "descriptions": {
      "s": "show this menu",
      "start": "start dev server on http://localhost:4200",
      "test": "Run project's tests with coverage",
      "e2e": "Run all e2e tests in background",
      "e2e-gui": "Open cypress and run tests visually",
      "deploy": "Deploy current project into github pages"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/cdk": "^17.3.9",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/material": "^17.3.9",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/service-worker": "^17.3.0",
    "@ngrx/effects": "^17.2.0",
    "@ngrx/store": "^17.2.0",
    "@ngrx/store-devtools": "^17.2.0",
    "bootstrap": "^5.3.3",
    "concurrently": "^8.2.2",
    "dexie": "^4.0.4",
    "ntl": "^5.1.0",
    "rxjs": "~7.8.0",
    "select-run": "^1.1.4",
    "tslib": "^2.3.0",
    "wait-on": "^7.2.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.3",
    "@angular/cli": "^17.3.3",
    "@angular/compiler-cli": "^17.3.0",
    "@types/jasmine": "~5.1.0",
    "cypress": "^13.10.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.2"
  }
}
